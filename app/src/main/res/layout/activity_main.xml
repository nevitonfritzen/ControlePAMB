<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.jungle.controlepamb.MainActivity">

    <Button
        android:id="@+id/bt_cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:onClick="cadastrar"
        android:text="Cadastrar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_consultar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bt_cadastrar"
        android:onClick="consulta"
        android:text="Consultar"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="75dp" />

    <Button
        android:id="@+id/bt_creditos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bt_consultar"
        android:onClick="creditos"
        android:text="Creditos"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="139dp" />
</RelativeLayout>
